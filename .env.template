# Environment variables for NexBuy
# Copy this file to .env and fill in your values

# Kaggle API credentials (optional - only if you want to use Kaggle datasets)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=nexbuy.log

# Data configuration
DATASET_NAME=vivek468/superstore-dataset-final
DATA_PATH=data/
TRAIN_TEST_SPLIT_RATIO=0.8

# Model configuration
DEFAULT_TOP_N=5
HYBRID_WEIGHTS_CONTENT=0.4
HYBRID_WEIGHTS_COLLAB=0.4
HYBRID_WEIGHTS_POPULAR=0.2

# Streamlit configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
